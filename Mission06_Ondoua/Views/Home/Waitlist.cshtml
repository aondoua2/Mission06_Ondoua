@{


@model List<Movie>

<table class="table table-bordered">
    <thead classs="fw-bold"> <br />
        <tr>
            <th>MovieId</th>
            <th>CategoryId</th>
            <th>Title</th>
            <th>Year</th>
            <th>Director</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>LentTo</th>
            <th>CopiedToPlex</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.MovieId</td>
                <td>@x.CategoryId</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.CopiedToPlex</td>
                <td>@x.Notes</td>
                <td><a class="btn btn-info" asp-controller="Home" asp-action="Update" 
                asp-route-id="@x.MovieId">Update</a></td>

                    <td>
                        <a class="btn btn-dark" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId"
                    style="color: white;">Delete</a></td>
            </tr>

           
        }
    </tbody>
</table>
}